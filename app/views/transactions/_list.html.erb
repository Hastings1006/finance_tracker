<% transactions_by_category.each do |category, transactions| %>
  <h2><%= category.name %></h2>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.transaction_date %></td>
          <td><%= transaction.transaction_type %></td>
          <td><%= number_to_currency(transaction.amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
