<div class="card">
  <h2>Overview</h2>
  <div class="overview">
    <% if @accounts.any? %>
      <div class="account-section">
        <div class="account-card">
          <h3> <%= link_to "Total", accounts_path %></h3>
          <p>£<%= @total%></p>
        </div>
        <%= render "shared/account_card" %>
      </div>
      <%# <% if @expenses_by_category.any? %>
      <%# <%= pie_chart @expenses_by_category, library: { title: 'Expenses by Category' } %>
      <%# <% else %>
      <%# <p>No expenses found.</p> %>
      <%# <% end %>
      <div class="budget-section">
        <% if @budget %>
            <h3> <%= link_to "Budgets", budget_path(@budget) %></h3>
            <p>£<%= @budget.ammount %></p>

        <% else %>
          <h3> <%= link_to "Budgets", budget_path(current_user) %></h3>
        <% end %>
      </div>
      <div class="pot-section">
        <% if @pots %>
          <h3> <%= link_to "Pots", pots_path %></h3>
        <%else%>
          <h3> <%= link_to "create a pot", new_pot_path %></h3>
        <%end%>
      </div>
    <% else %>
      <%= link_to 'Add account', new_account_path(current_user)%>
    <% end %>
  </div>
</div>
